{
  "compilerOptions": {        
    "lib": ["dom","DOM.Iterable","esnext"],  //aceitar varios tipos de lib                              
    "allowJs": true,    // podemos ter tanto arquivos js como ts                         
    "jsx": "react-jsx",   //utilizando jsx  escrever html dentro do js                      
    "noEmit": true,      //caso execute o build n emitir o codigo                        
    "strict": true,                                
    "moduleResolution": "node",  
    "resolveJsonModule": true, //adiciona a possibilidade de importar arquivos json
    "isolatedModules": false,               
    "allowSyntheticDefaultImports": true ,
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        

  },
  "include": ["src"] //  todo codigo ts esta dentro da pasta src
}
